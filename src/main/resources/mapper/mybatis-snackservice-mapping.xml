<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SnackMapper">

	<resultMap type="snack" id="selectSnackRM">
		<result property="snackId" column="snack_id"/>
		<result property="name" column="name"/>
		<result property="category" column="category"/>
		<result property="quantity" column="quantity"/>
		<result property="price" column="price"/>
		<result property="imgUrl" column="img_url"/>
	</resultMap>
		
	<sql id="select-snack">
		SELECT
		snack_id, name, category, quantity, price, img_url
		FROM snack
	</sql>
	
	
	<select id = "selectAll" resultMap="selectSnackRM">
		<include refid="select-snack"/>
	</select>
	
</mapper>
















